@model IEnumerable<Practica8Unidad2.Models.Estudiante>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Estudiantes</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create","Estudiante",null,new { @class="btn btn-success", @style="margin-bottom:10px" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaInscripcion)
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaInscripcion)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id=item.Id },new { @class="glyphicon glyphicon-edit" }) |
            @Html.ActionLink(" ", "Details", new { id=item.Id }, new { @class="glyphicon glyphicon-th-list" }) |
            @Html.ActionLink(" ", "Delete", new { id=item.Id },new { @class="glyphicon glyphicon-trash" })
        </td>
    </tr>
}

</table>
