@model IEnumerable<Practica8Unidad2.Models.Inscripcion>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Inscripciones</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create", "Inscripcion", null, new { @class = "btn btn-success", @style = "margin-bottom:10px" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CursoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstudianteId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Semestre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CursoId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstudianteId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Semestre)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit" }) |
            @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-th-list" }) |
            @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash" })
        </td>
    </tr>
}

</table>
